<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:context=".activity.AddRouteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMessage"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/new_route_message"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/message_tv"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/from_tv"
                style="@style/addRouteLabel"
                android:text="@string/departure"/>

            <EditText
                android:id="@+id/from_et"
                style="@style/addRouteEditText"
                android:layout_below="@+id/from_tv"
                android:hint="@string/departure"/>

            <TextView
                android:id="@+id/to_tv"
                style="@style/addRouteLabel"
                android:layout_below="@+id/from_et"
                android:text="@string/destination"/>

            <EditText
                android:id="@+id/to_et"
                style="@style/addRouteEditText"
                android:layout_below="@+id/to_tv"
                android:hint="@string/destination"/>

            <TextView
                android:id="@+id/cost_tv"
                style="@style/addRouteLabel"
                android:layout_below="@+id/to_et"
                android:text="@string/cost"/>

            <EditText
                android:id="@+id/cost_et"
                style="@style/addRouteEditText"
                android:layout_below="@+id/cost_tv"
                android:hint="@string/cost"
                android:inputType="numberDecimal"/>

            <TextView
                android:id="@+id/payment_method_tv"
                style="@style/addRouteLabel"
                android:layout_below="@+id/cost_et"
                android:text="@string/payment_method"/>

            <Spinner
                android:id="@+id/payment_method_spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment_method_tv"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/departure_time_tv"
                style="@style/addRouteLabel"
                android:layout_below="@+id/payment_method_spn"
                android:text="@string/departure_time"/>

            <EditText
                android:id="@+id/departure_time_et"
                style="@style/addRouteEditText"
                android:layout_below="@+id/departure_time_tv"
                android:hint="@string/departure_time"/>

            <TextView
                android:id="@+id/contact_tv"
                style="@style/addRouteLabel"
                android:layout_below="@+id/departure_time_et"
                android:text="@string/contact"/>

            <EditText
                android:id="@+id/contact_et"
                style="@style/addRouteEditText"
                android:layout_below="@+id/contact_tv"
                android:hint="@string/contact"/>

            <TextView
                android:id="@+id/streets_tv"
                style="@style/addRouteLabel"
                android:layout_below="@+id/contact_et"
                android:text="@string/avenues_streets_comments"/>

            <EditText
                android:id="@+id/streets_et"
                style="@style/addRouteEditText"
                android:layout_below="@+id/streets_tv"
                android:gravity="top"
                android:hint="@string/avenues_streets_comments"
                android:lines="5"
                android:singleLine="false"/>

            <Button
                android:id="@+id/publish_btn"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/streets_et"
                android:text="@string/publish"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>